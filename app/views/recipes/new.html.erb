<%= render 'partials/navigation' %>
<%= stylesheet_link_tag "recipes_new"%>

<section id="new-recipe">
  <h1>Add a recipe</h1>

  <%= form_with(url:  user_recipes_path, model: @recipe) do |form| %>
    <% if @recipe.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

        <ul>
          <% @recipe.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, placeholder:"Enter recipe name" %>
    </div>

    <div>
      <%= form.label :preparation_time, style: "display: block" %>
      <%= form.text_field :preparation_time, placeholder:"Enter preparation time" %>
    </div>

    <div>
      <%= form.label :cooking_time, style: "display: block" %>
      <%= form.text_field :cooking_time, placeholder:"Enter cooking time" %>
    </div>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description, placeholder:"Enter recipe description" %>
    </div>

    <div id="public-check">
      <%= form.label :public, style: "display: block" %>
      <%= form.check_box :public %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</section>